<div class = "container my-pages">
<h2 class = "text-center">Albums</h2>
<div class = "container-fluid">
  <table class = "table table-responsive">
    <thead>
      <tr>
        <td class = "my-label">Rank</td>
        <td class = "my-label">Title</td>
        <td class = "my-label">Artist</td>
        <td class = "my-label">Description</td>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td class = "my-rank"><%= album.rank %></td>
          <td><%= link_to album.name, "/albums/show/#{album.id}", :class => "my-name-link" %></td>
          <td class = "creator-link"><%= album.artist %></td>
          <td><%= album.description %></td>
          <td><%= link_to image_tag("edit.png", :class => "my-icons"), "/albums/#{album.id}/edit" %></td>
          <td><%= link_to image_tag("trash.png", :class => "my-icons"), "/albums/destroy/#{album.id}" %></td>
          <td><%= link_to image_tag("thumb.png", :class => "my-icons"), "/albums/upvote/#{album.id}" %></td>
          <td><%= link_to image_tag("thumb.png", :class => "my-icons", :id => "rotate-thumb"), "/albums/downvote/#{album.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class = "container col-xs-12">
<%= link_to "New Album", new_album_path, :class => "my-button"%>
</div>
</div>
