<div class = "container my-pages">
<h2><%= @movie.name %></h2>
<h3 class = "grey"><%= @movie.director %></h3>
<h3 class = "green">Rank: <%= @movie.rank %></h3>
<p><%= @movie.description %></p>

<img><%= link_to image_tag("edit.png", :class => "my-icons"), "/movies/#{@movie.id}/edit" %></img>
<img><%= link_to image_tag("trash.png", :class => "my-icons"), "/movies/destroy/#{@movie.id}" %></img>
<img><%= link_to image_tag("thumb.png", :class => "my-icons"), "/movies/upvote/#{@movie.id}" %></img>
<img><%= link_to image_tag("thumb.png", :class => "my-icons", :id => "rotate-thumb"), "/movies/downvote/#{@movie.id}" %></p>

<td><%= link_to "View All Movies", movies_path, :class => "my-button" %></td>
<td><%= link_to "View All Media", "/", :class => "my-button" %></td>
</div>
