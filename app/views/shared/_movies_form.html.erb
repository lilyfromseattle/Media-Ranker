<%= form_for @movie, url: {action:obj} do |f| %>

  <%= f.label :name, "Movie Title:" %>
  <%= f.text_field :name %>
  <%= render "shared/error_messages", obj: @movie, col: :name %>

  <%= f.label :director, "Director:" %>
  <%= f.text_field :director %>
  <%= render "shared/error_messages", obj: @movie, col: :director %>

  <%= f.label :description, "Description:" %>
  <%= f.text_field :description %>
  <%= render "shared/error_messages", obj: @movie, col: :description %>

  <%= f.hidden_field :rank, :value => 0 %>

<%= f.submit %>

<% end %>
