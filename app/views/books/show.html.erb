<div class = "container my-pages">
<h2><%= @book.name %></h2>
<h3 class = "grey"><%= @book.author %></h3>
<h3 class = "green">Rank: <%= @book.rank %></h3>
<p><%= @book.description %></p>

<img><%= link_to image_tag("edit.png", :class => "my-icons"), "/books/#{@book.id}/edit" %></img>
<img><%= link_to image_tag("trash.png", :class => "my-icons"), "/books/destroy/#{@book.id}" %></img>
<img><%= link_to image_tag("thumb.png", :class => "my-icons"), "/books/upvote/#{@book.id}" %></img>
<img><%= link_to image_tag("thumb.png", :class => "my-icons", :id => "rotate-thumb"), "/books/downvote/#{@book.id}" %></p>

<td><%= link_to "View All Books", books_path, :class => "my-button" %></td>
<td><%= link_to "View All Media", "/", :class => "my-button" %></td>
</div>
